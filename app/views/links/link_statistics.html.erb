<div class="container">
	<%if @total_links_shortened %>
		<h3 style="text-align:center">Total number of links shortened is: <%= @total_links_shortened %></h3>
	<% end %>
	<br>
	<br>

  <h3 style="text-align:center">Calculate number of times a shortened link is accessed!</h3>
  <br>
  <br>
  <form>
    <div class="form-group row">
      <div class="col-md-4"></div>
      <div class="col-md-4" action="/statistics">
        <input class="form-control text-field" type="text" placeholder="Enter the shortened url" name="short_link">
      </div>
      <div class="col-md-4"></div>
    </div>
   
    <div class="form-group row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <button type="submit" class="form-control btn btn-primary">Submit</button>
      </div>
      <div class="col-md-4"></div>
    </div>
  </form>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
  <p>
  <%if @link.present?%>
    Link <%=@link.short_link%> is accessed <b><%=@link.count%></b> times.
  <%else%>
  	Please enter a valid link.  
  <%end%>  
  </p>
  </div>
  <div class="col-md-4"></div>
</div>
