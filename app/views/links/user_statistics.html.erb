<div class="container">
  <h3 style="text-align:center">Calculate number of times a user has shortened links!</h3>
  <br>
  <br>
  <form>
    <div class="form-group row">
      <div class="col-md-4"></div>
      <div class="col-md-4" action="/user_statistics">
        <input class="form-control text-field" type="text" placeholder="Enter the user name" name="username">
      </div>
      <div class="col-md-4"></div>
    </div>
   
    <div class="form-group row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <button type="submit" class="form-control btn btn-primary">Submit</button>
      </div>
      <div class="col-md-4"></div>
    </div>
  </form>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
    <p>
    <%if @link_count.present? %>
      <%=@user.username%> has shortened <%=@link_count%> links.
      <br>
      <%@links.each do |link|%>
        <p><a href=<%=link.long_link%>><%=link.long_link%></a> to <a href=<%=link.short_link%>><%=link.short_link%></a></p><br>
      <%end %>
    <%else%>
    	Please enter a valid user name.  
    <%end%>  
    </p>
  </div>
  <div class="col-md-4"></div>

</div>
